---
interface Props {
    tutorial: {
        name: string
        level: string
        description: string
        tags: string[]
        thumbnailUrl: string
    }
}

const { tutorial } = Astro.props
---

<article>
    <img src={tutorial.thumbnailUrl} alt={tutorial.name}>
    <p>{tutorial.level}</p>
    <h3>{tutorial.name}</h3>
    <div>
        {tutorial.tags.map(tag => <a href="">{tag}</a>)}
    </div>
    <p>{tutorial.description}</p>
</article>