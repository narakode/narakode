---
interface Props {
    tutorial: {
        name: string
        level: string
        description: string
        tags: string[]
        thumbnailUrl: string
    }
}

const { tutorial } = Astro.props
---

<article class="bg-white border border-gray-300 rounded-lg p-4 space-y-4">
    <div class="relative">
        <img src={tutorial.thumbnailUrl} alt={tutorial.name} class="rounded-md">
        <span class="bg-blue-100 text-xs h-5 inline-flex items-center px-1.5 rounded-lg text-blue-900 font-medium absolute top-3 left-2.5">{tutorial.level}</span>
    </div>

    <div class="space-y-2">
        <div class="flex items-center gap-2 text-red-900">
            {tutorial.tags.map(tag => <a href="">#{tag}</a>)}
        </div>
        <h3 class="font-bold text-lg text-gray-900">{tutorial.name}</h3>
        <p class="text-gray-700">{tutorial.description}</p>
    </div>
</article>