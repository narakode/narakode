---
const { tag: Element = 'button', color, size, smSize, expand, ...props } = Astro.props

const colorClass = {
    yellow: 'bg-amber-500 hover:bg-amber-600 text-white',
    blue: 'bg-blue-600 hover:bg-blue-700 text-white',
    red: 'bg-red-600 hover:bg-red-700 text-white',
    'transparent': 'bg-white hover:bg-neutral-200'
}[color]
const sizeClass = {
    md: 'h-10 px-4 rounded-lg text-sm',
    lg: 'h-12 px-6 rounded-lg',
}[size]
const smSizeClass = {
    sm: 'sm:h-8 sm:text-sm sm:px-3 sm:rounded-md',
}[smSize]
---

<Element {...props} class={`${expand ? 'w-full' : 'w-fit'} flex justify-center items-center font-semibold text-center ${colorClass} ${sizeClass} ${smSizeClass ?? ''}`}>
    <slot />
</Element>