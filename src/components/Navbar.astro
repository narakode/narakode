---
import { Icon } from "astro-icon/components";
import Button from './Button.astro'

const menus = [
    {
        name: 'Layanan',
        children: [
            {
                name: 'Pembuatan Website',
                icon: 'tabler/desktop',
                description: 'Mulai dari 100k'
            },
            {
                name: 'Pembuatan Aplikasi',
                icon: 'tabler/mobile',
                description: 'Mulai dari 200k'
            }
        ]
    },
    {
        name: 'Produk'
    },
    {
        name: 'Fitur'
    }
]
---

<nav class="sm:h-20 w-full py-4 sm:p-0 flex items-center bg-white border-b border-neutral-200 sm:border-0">
    <div class="wrapper h-full flex flex-wrap sm:flex-nowrap items-center justify-between gap-2 sm:gap-0">
        <a href="" class="text-blue-600 hover:text-blue-700">
            <Icon name="tabler/rocket" class="w-8 h-8" />
        </a>
        <button class="sm:hidden">
            <Icon name="tabler/menu" class="w-6 h-6 text-neutral-600 hover:text-neutral-900" />
        </button>
        <div class="hidden sm:flex flex-col sm:flex-row w-full sm:w-auto h-full sm:items-center gap-4 sm:gap-8 py-2 sm:p-0">
            {menus.map(menu => {
                return <div class="relative group/parent h-full">
                    <a href="#" class="h-full flex items-center justify-between sm:justify-start gap-2 text-neutral-900 group-hover/parent:text-blue-600">
                        {menu.name}
                        {menu.children && <Icon name="tabler/chevron-up" class="hidden group-hover/parent:block" />}
                        {menu.children && <Icon name="tabler/chevron-down" class="block group-hover/parent:hidden" />}
                    </a>
                    {menu.children && <div class="hidden group-hover/parent:flex group-hover/parent:flex-col absolute z-10 top-8 sm:top-16 left-0 w-full sm:w-fit py-2 bg-white shadow-lg rounded-lg border border-neutral-100">
                        {menu.children.map(child => <a href="" class="group/child flex items-center gap-4 py-4 px-6 hover:bg-neutral-50 whitespace-nowrap">
                            <Icon name={child.icon} class="w-8 h-8 text-blue-600" />
                            <div>
                                <span class="font-semibold group-hover/child:text-blue-600">{child.name}</span>
                                <p class="text-sm text-neutral-600">{child.description}</p>
                            </div>
                        </a>)}
                    </div>}
                </div>
            })}
            <Button color="yellow" size="md" smSize="sm">Hubungi Kami</Button>
        </div>
    </div>
</nav>