---
import { Icon } from 'astro-icon/components'

type Color = 'secondary' | 'primary'
type Size = 'md' | 'lg'

interface Props {
    tag?: 'button' | 'a'
    color?: Color
    size?: Size
    xlSize?: Size
    icon?: string
    fullwidth?: boolean
}

const colorClass: Record<Color, string> = {
    secondary: 'bg-yellow-600 text-white hover:bg-yellow-700',
    primary: 'bg-red-800 text-white hover:bg-red-900'
}
const sizeClass: Record<Size, string> = {
    md: 'h-10 px-4 rounded-lg',
    lg: 'h-12 px-6 rounded-lg text-lg'
}
const xlSizeClass: Record<Size, string> = {
    md: 'xl:h-10 xl:px-4 xl:rounded-lg',
    lg: 'xl:h-12 xl:px-6 xl:rounded-lg xl:text-lg'
}
const iconSize: Record<Size, number> = {
    md: 16,
    lg: 20
}

const { tag: Element = 'button', color = 'primary', size = 'md', xlSize, icon, fullwidth = false } = Astro.props
---

<Element class={`font-medium flex items-center justify-center gap-2 cursor-pointer whitespace-nowrap ${colorClass[color]} ${sizeClass[size]} ${xlSize ? xlSizeClass[xlSize] : ''} ${fullwidth ? 'w-full' : ''}`}>
    <slot />
    {icon && <Icon name={icon} size={iconSize[size]} />}
</Element>