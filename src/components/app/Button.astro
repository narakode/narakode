---
import { Icon } from 'astro-icon/components'

type Color = 'secondary' | 'primary'
type Size = 'md' | 'lg'

interface Props {
    tag?: 'button' | 'a'
    color?: Color
    size?: Size
    icon?: string
}

const colorClass: Record<Color, string> = {
    secondary: 'bg-yellow-600 text-white hover:bg-yellow-700',
    primary: 'bg-red-800 text-white hover:bg-red-900'
}
const sizeClass: Record<Size, string> = {
    md: 'h-10 px-4 rounded-lg',
    lg: 'h-12 px-6 rounded-lg text-lg'
}
const iconSize: Record<Size, number> = {
    md: 16,
    lg: 20
}

const { tag: Element = 'button', color = 'primary', size = 'md', icon } = Astro.props
---

<Element class={`font-medium flex items-center gap-2 cursor-pointer ${colorClass[color]} ${sizeClass[size]}`}>
    <slot />
    {icon && <Icon name={icon} size={iconSize[size]} />}
</Element>