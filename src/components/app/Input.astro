---
type Color = 'transparent' | 'light'

interface Props {
    type?: 'search' | 'email'
    placeholder?: string
    color?: Color
    bordered?: boolean
    name?: string
    class?: string
    id?: string
}

const { name, id, placeholder, type, color = 'transparent', bordered = true, class: className = '' } = Astro.props

const colorClass: Record<Color, string> = {
    transparent: '',
    light: 'bg-white placeholder-gray-400'
}
---

<input id={id} name={name} type={type} placeholder={placeholder} class=`${colorClass[color]} ${bordered ? 'border border-gray-300' : ''} h-10 px-2.5 rounded-lg ${className}`>