---
type Color = 'dark' | 'primary' | 'light' | 'light-muted'

interface Props {
    color?: Color
    class?: string
    href?: string
    ariaLabel?: string
    title?: string
}

const colorClass: Record<Color, string> = {
    dark: 'text-gray-900 hover:text-red-900',
    primary: 'text-red-900',
    light: 'text-white',
    'light-muted': 'text-gray-300 hover:text-white'
}

const { color = 'dark', class: className = '', href, ariaLabel, title } = Astro.props
---

<a href={href} title={title} aria-label={ariaLabel} class=`hover:underline ${colorClass[color]} ${className}`>
    <slot />
</a>