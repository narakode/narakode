---
type Color = 'info' | 'warning'
interface Props {
    color?: Color
}

const { color = 'info' } = Astro.props

const colorClass: Record<Color, string> = {
    info: 'bg-blue-100 text-blue-900',
    warning: 'bg-yellow-100 text-yellow-900'
}
---

<span class=`text-xs h-5 inline-flex items-center px-1.5 rounded-lg font-medium whitespace-nowrap ${colorClass[color]}`>
    <slot />
</span>