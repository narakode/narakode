---
interface Props {
    class?: string
    tag?: 'article' | 'div' | 'aside' | 'section' | 'main'
    id?: string
}

const { id, class: className = '', tag: Element = 'article' } = Astro.props
---

<Element id={id} class={`bg-white border border-gray-300 p-4 rounded-lg ${className}`}>
    <slot />
</Element>