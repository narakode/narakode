---
interface Props {
    article: {
        title: string
        thumbnailUrl: string
        description: string
        category: string
    }
}

const { article } = Astro.props
---

<article class="bg-white border border-gray-300 p-4 rounded-lg space-y-4">
    <img src={article.thumbnailUrl} alt={article.title}>
    <div class="space-y-2">
        <span class="bg-blue-100 text-xs h-5 inline-flex items-center px-1.5 rounded-lg text-blue-900 font-medium">{article.category}</span>
        <h3 class="font-bold text-gray-900 text-lg">{article.title}</h3>
        <p class="text-gray-700">{article.description}</p>
    </div>
</article>