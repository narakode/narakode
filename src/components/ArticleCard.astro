---
import type { ImageMetadata } from 'astro'
import Badge from './app/Badge.astro'
import Card from './app/Card.astro'
import Link from './app/Link.astro'
import { Image } from 'astro:assets'

interface Props {
    article: {
        title: string
        thumbnailSrc: ImageMetadata
        description: string
        category: string
    }
}

const { article } = Astro.props
---

<Card class="space-y-4">
    <Image src={article.thumbnailSrc} alt={article.title} class={'rounded-md'} />
    <div class="space-y-2">
        <Badge>{article.category}</Badge>
        <h3 class="font-bold text-gray-900 text-lg">
            <Link>{article.title}</Link>
        </h3>
        <p class="text-gray-700">{article.description}</p>
    </div>
</Card>