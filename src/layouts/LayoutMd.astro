---
import Card from "../components/app/Card.astro";
import Container from "../components/app/Container.astro";
import Section from "../components/app/Section.astro";
import Layout from "./Layout.astro";

import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  description: string
}>;

const { frontmatter } = Astro.props
---

<Layout navbarBordered title={frontmatter.title} description={frontmatter.description}>
    <Container tag="main" class="py-8">
        <Section tag="article" title={frontmatter.title} level={1} class="max-w-screen-md mx-auto" titleCenter>
            <Card>
                <div class="prose max-w-none w-full">
                    <slot />
                </div>
            </Card>
        </Section>
    </Container>
</Layout>